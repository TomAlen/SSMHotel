<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                         http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

   <!-- 自动扫描Control包-->
    <context:component-scan base-package="com.zwhzzz.Controller"/>

    <!--使用注解-->
    <context:annotation-config/>

    <mvc:annotation-driven/>

    <!--对静态资源的映射路径-->
  <!--  &lt;!&ndash;jquery文件映射&ndash;&gt;
    <mvc:resources mapping="/js/**" location="/WEB-INF/statics/js/"/>
    &lt;!&ndash;bootstrap文件的映射&ndash;&gt;
    <mvc:resources mapping="/css/**" location="/WEB-INF/statics/css/"/>
    &lt;!&ndash;图片的静态资源&ndash;&gt;
    <mvc:resources mapping="/image/**" location="/WEB-INF/statics/image/"/>-->
    <!--easyUI的资源-->
    <mvc:resources mapping="/easyui/**" location="/WEB-INF/statics/easyui/"/>
    <!--h-ui的资源-->
    <mvc:resources mapping="/h-ui/**" location="/WEB-INF/statics/h-ui/"/>
    <!--login资源-->
    <mvc:resources mapping="/login/**" location="/WEB-INF/statics/login/"/>
    <!--前端资源-->
    <mvc:resources mapping="/home/**" location="/WEB-INF/statics/home/"/>
    <!--前端资源-->
    <mvc:resources mapping="/echarts/**" location="/WEB-INF/statics/echarts/"/>




    <!--配置视图解析器-->
    <bean id="defaultViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/views/"/><!--设置JSP文件的目录位置-->
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--将springmvc不能请求的业务交给tomcat处理-->
    <mvc:default-servlet-handler/>

    <!--&lt;!&ndash;配置拦截器&ndash;&gt;
    <mvc:interceptors>
        &lt;!&ndash;后台登录拦截器&ndash;&gt;
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <mvc:mapping path="/system/*"/>
            <mvc:exclude-mapping path="/system/login"/>
            <mvc:exclude-mapping path="/system/get_cpacha"/>
            <mvc:exclude-mapping path="/system/goLogin"/>
            <mvc:exclude-mapping path="/webapp/WEB-INF/statics"/>
            <bean class="com.zwhzzz.interceptor.admin.LoginInterceptor"/>
        </mvc:interceptor>
        &lt;!&ndash;前台登录拦截器&ndash;&gt;
        <mvc:interceptor>
            &lt;!&ndash;只要是home/account 路径下的都拦截&ndash;&gt;
            <mvc:mapping path="/home/account/**"/>
            <bean class="com.zwhzzz.interceptor.home.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>-->

    <!--  配置文件上传解析器  -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--  指定请求编码格式  -->
        <property name="defaultEncoding" value="UTF-8"/>
        <!--  指定指定允许上传文件的最大值(20MB)  -->
        <property name="maxUploadSize" value="20971520"/>
    </bean>

</beans>
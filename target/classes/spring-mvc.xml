<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                         http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

   <!-- 自动扫描Control包-->
    <context:component-scan base-package="com.zwhzzz.Controller"/>
    <!--使用注解-->
    <context:annotation-config/>
    <mvc:annotation-driven/>
    <!--对静态资源的映射路径-->
    <!--easyUI的资源-->
    <mvc:resources mapping="/easyui/**" location="/WEB-INF/statics/easyui/"/>
    <!--h-ui的资源-->
    <mvc:resources mapping="/h-ui/**" location="/WEB-INF/statics/h-ui/"/>
    <!--login资源-->
    <mvc:resources mapping="/login/**" location="/WEB-INF/statics/login/"/>
    <!--前端资源-->
    <mvc:resources mapping="/home/**" location="/WEB-INF/statics/home/"/>
    <!--前端资源-->
    <mvc:resources mapping="/echarts/**" location="/WEB-INF/statics/echarts/"/>
    <!--layui资源-->
    <mvc:resources mapping="/layui/**" location="/WEB-INF/statics/layui/"/>
    <!--bootstrap资源-->
    <mvc:resources mapping="/bootstrap/**" location="/WEB-INF/statics/bootstrap/"/>
    <!--配置视图解析器-->
    <bean id="defaultViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/views/"/><!--设置JSP文件的目录位置-->
        <property name="suffix" value=".jsp"/>
    </bean>
    <!--将springmvc不能请求的业务交给tomcat处理-->
    <mvc:default-servlet-handler/>
    <!--配置拦截器-->
    <mvc:interceptors>
        <!--后台登录拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <mvc:mapping path="/system/*"/>
            <mvc:exclude-mapping path="/system/login"/>
            <mvc:exclude-mapping path="/system/get_cpacha"/>
            <mvc:exclude-mapping path="/system/goLogin"/>
            <mvc:exclude-mapping path="/webapp/WEB-INF/statics"/>
            <bean class="com.zwhzzz.interceptor.admin.LoginInterceptor"/>
        </mvc:interceptor>
        <!--前台登录拦截器-->
        <mvc:interceptor>
            <!--只要是home/account 路径下的都拦截-->
            <mvc:mapping path="/home/account/**"/>
            <bean class="com.zwhzzz.interceptor.home.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!--  配置文件上传解析器  -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--  指定请求编码格式  -->
        <property name="defaultEncoding" value="UTF-8"/>
        <!--  指定指定允许上传文件的最大值(20MB)  -->
        <property name="maxUploadSize" value="20971520"/>
    </bean>
</beans>